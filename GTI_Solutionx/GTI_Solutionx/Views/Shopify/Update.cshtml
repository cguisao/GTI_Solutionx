@model IEnumerable<GTI_Solutionx.Models.Dashboard.ServiceTimeStamp>
@{
    ViewBag.Title = "Update";
}
<head>
    <!-- DataTables -->
    <link href="~/assets/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
</head>
<div class="wrapper">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <h2>Fragrancex's database One Click update</h2>
                    </div>
                    <div class="card-body">
                        <p>
                            This application is intended to update the
                            GTI Solution's Fragrancex database. Such
                            update includes item price and availability
                            once a day.
                        </p>

                        <form asp-controller="Shopify" asp-action="Update" method="post"
                              enctype="multipart/form-data">
                            <div class="text-center m-t-15 invisible">
                                <input type="text" class="form-control" name="file" value="@ViewBag.ExcelGuid">
                            </div>
                            <div class="form-group text-center col-md-12">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                            </div>
                            @if (@ViewData["Error"] != null)
                            {
                            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <i class="mdi mdi-close-circle font-32"></i><strong class="pr-1">@ViewData["Error"]</strong>
                            </div>
                            }
                            @if (@ViewData["Info"] != null)
                            {
                            <div class="alert alert-warning alert-dismissible fade show d-flex align-items-center" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <i class="mdi mdi-alert-circle font-32"></i>@ViewData["Info"]
                            </div>
                            }
                            @if (@ViewData["Success"] != null)
                            {
                            <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <i class="mdi mdi-checkbox-marked-circle font-32"></i><strong class="pr-1">@ViewData["Success"]</strong>
                            </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Last Updated Date</th>
                                        <th>Database Update Type</th>
                                        <th>Wholesaler</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.TimeStamp.ToString("MM/dd/yyyy hh:mm tt")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.type)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Wholesalers)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>