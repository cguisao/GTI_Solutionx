@model IEnumerable<GTI_Solutionx.Models.Dashboard.Shipping>
@{
    ViewBag.Title = "AzImport Shipping";
}

<head>
    <!-- DataTables -->
    <link href="~/assets/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
</head>
<div class="wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
                <div class="card ">
                    <div class="card-body">
                        <h2>AzImport Shipping</h2>

                        <p>
                            This application is intended to set up the AzImport
                            shipping prices.
                        </p>
                        <form asp-controller="AzImporter" asp-action="Shipping" asp-antiforgery="false"
                              enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="ProfileUser">Weight:</label>
                                    <input type="number" class="form-control" name="Weight" placeholder="Weight" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="ProfileUser">Price:</label>
                                    <input type="text" class="form-control" name="Price" placeholder="Price" required>
                                </div>
                                <div class="form-group text-center col-md-12">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                </div>
                            </div>
                        </form>
                        @if (@ViewData["Error"] != null)
                        {
                        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>   
                            <i class="mdi mdi-close-circle font-32"></i><strong class="pr-1">@ViewData["Error"]</strong>
                        </div>
                        }
                        @if (@ViewData["Success"] != null)
                        {
                        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <i class="mdi mdi-checkbox-marked-circle font-32"></i><strong class="pr-1">@ViewData["Success"]</strong>
                        </div>
                        }
                    </div>
                </div>
            </div> <!-- end col -->
            <div class="col-md-1">
            </div>
        </div> <!-- end row -->
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Weight in Lbs</th>
                                        <th>Price Per Item</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.weightId) lbs
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ItemPrice)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-1">
            </div>
        </div>
    </div>
</div>